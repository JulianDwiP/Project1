<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llBook1"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewBuku"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fotoBuku"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="3dp"
                            android:layout_width="110dp"
                            android:layout_height="150dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars = "vertical"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/judulBuku"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:paddingLeft="5dp"
                            android:fontFamily="sans-serif"
                            android:text="Test blalalalalalallal alalallalala allalalalalalalallal"
                            android:textColor="#3C3B3B"
                            android:textSize="18dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:orientation="horizontal">

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/peringkatRecyclerView"
                            android:textSize="16dp"
                            android:textColor="#6F6F6F"
                            android:drawableRight="@drawable/ic_star_rv"
                            android:text="4.5 "
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"
                android:text="Sinopsis : "
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/sinopsisBuku"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text=""
                android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

<!--        <TextView-->
<!--            android:id="@+id/gadaBuku"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Buku tidak ditemukan"-->
<!--            android:layout_gravity="center"-->
<!--            android:textSize="@dimen/dimen_20dp"/>-->
    </LinearLayout>
</ScrollView>