<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.deskripsiRakBuku">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/desRakToolbar"
            app:titleTextColor="@color/md_white_1000"
            android:background="@color/primary_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgDesRakBuku"
                android:layout_width="172dp"
                android:layout_height="200dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/images" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/judulDesRakBuku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Judul Buku"
                    android:textAlignment="viewStart"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/authorDesRakBuku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Author"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/peringkatDesRakBuku"
                android:textSize="20dp"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_star"
                android:layout_marginLeft="30dp"
                android:text="4.5 "
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_width="3dp"
                android:layout_marginLeft="30dp"
                android:background="#8F8A8A"
                android:layout_gravity="center_vertical"
                android:layout_height="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableTop="@drawable/ic_ebook"
                android:text="eBook"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="3dp"
                android:layout_marginLeft="30dp"
                android:background="#8F8A8A"
                android:layout_gravity="center_vertical"
                android:layout_height="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvDesRakKategori"
                android:text="Kategori"
                android:textAlignment="center"
                android:textSize="14dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/btnSesudahLoginDesRakBuku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnDesRakHapus"
                android:layout_width="343dp"
                android:layout_height="36dp"
                android:layout_below="@id/btnDesRakBaca"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:background="@color/biru"
                android:text="Hapus Dari List"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btnDesRakBaca"
                android:layout_width="343dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:background="@color/biru"
                android:text="Baca buku"
                android:textSize="12dp" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:textSize="19dp"
            android:text="Sinopsis"/>
        <TextView
            android:id="@+id/sinopsisDesRakBuku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=""
            android:layout_marginLeft="20dp"
            android:textSize="17dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ratingRakLinear"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="Beri Rating Buku"
                android:layout_gravity="center_horizontal"
                android:textSize="19dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5"
                android:scaleX="2"
                android:scaleY="2"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>